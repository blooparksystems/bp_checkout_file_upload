<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<template id="upload_field" inherit_id="website_sale.checkout" name="Checkout File Upload">
			<xpath expr="//div[@class='col-md-8 oe_cart']" position="after">
				<div t-attf-class="form-group #{error.get('ufile') and 'has-error' or ''} col-lg-6">
					<input class="input-file" id="ufile" type="file" name="ufile"/>
					<span t-if="error.get('ufile')">Please send again.</span>
				</div>
			</xpath>
		</template>

	</data>
</openerp>
